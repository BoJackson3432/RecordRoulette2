{
  "version": 2,
  "buildCommand": "cd RekordRoulette && npm run build",
  "outputDirectory": "RekordRoulette/dist/public",
  "installCommand": "cd RekordRoulette && npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "SPOTIFY_REDIRECT_URI": "https://recordroulette-fresh.vercel.app/api/auth/spotify/callback"
  }
}