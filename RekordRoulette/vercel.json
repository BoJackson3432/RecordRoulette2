{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/me",
      "destination": "/api/user"
    },
    {
      "source": "/api/premium/status",
      "destination": "/api/user/premium/status"
    },
    {
      "source": "/api/trophies",
      "destination": "/api/user/trophies"
    },
    {
      "source": "/api/spin/can-spin", 
      "destination": "/api/spin/can-spin"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "SPOTIFY_REDIRECT_URI": "https://www.recordroulette.com/api/auth/spotify/callback"
  }
}